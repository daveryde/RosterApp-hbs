{{!-- User dashboard landing page --}}
<div class="row mt-4 align-items-center justify-content-around">
  <div class="col-md-12">
    <div class="jumbotron bg-secondary">
      <div class="row mt-4 align-items-center justify-content-around">
        {{!-- User card info message --}}
        <div class="col-md-5">
          <div class="card bg-info text-white mb-3">
            <div class="card-header text-center">Name: {{user.firstName}}</div>
            <div class="card-body">
              <h5 class="card-title">Email: {{user.email}}</h5>
              <p class="card-text">This message was tailored specifically to you, {{user.firstName}}. We think you're
                awesome
                and want to thank you for supporting the team!</p>
              <a href="/profiles/edit/{{user.id}}" class="btn btn-light">Edit Profile</a>
            </div>
          </div>
        </div>
        {{!-- Jumbotron landing --}}
        <div class="col-md-7">
          <div class="jumbotron bg-info text-center">
            {{#profile}}
            <p class="lead">
              <span class="font-weight-bold">Hey, {{handle}}!</span>
            </p>
            {{/profile}}
            <p class="lead">Welcome to your personalized dashboard. Edit your profile or start making rosters!</p>
            {{!-- Create Roster Link --}}
            <a href="/profiles/createRoster" class="btn btn-success">Create A Roster</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
