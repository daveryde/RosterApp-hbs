<div class="row justify-content-center">
  <div class="col-md-6">
    <form action="/products/dashboard/roster/{{user.id}}" method="post">
      <fieldset>
        <div class="form-group">
          <label for="inputName">Name</label>
          <input type="name" class="form-control" id="inputName" aria-describedby="emailHelp" placeholder="Enter name">
          <small id="nameHelp" class="form-text text-muted">This name will be displayed under each picture.</small>
        </div>
        <div class="form-group">
          <label for="inputNumber">Number</label>
          <input type="text" class="form-control" id="inputNumber" placeholder="6 digit Number">
        </div>
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </fieldset>
    </form>
  </div>

  <div class="col-md-8 mt-4">
    <p>Right side where pictures go</p>
    {{#if product}}
    {{#each product}}
    {{> figure}}
    {{/each}}
    {{/if}}
  </div>
</div>


