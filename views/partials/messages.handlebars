<div class="row">
  {{#if success_msg}}
  <div class="col-md-6">
    <div class="alert alert-warning alert-dismissible fade show text-center text-dark" role="alert">
      {{success_msg}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
  {{/if}}

  {{#if error_msg}}
  <div class="col-md-6">
    <div class="alert alert-warning alert-dismissible fade show text-center text-dark" role="alert">
      {{error_msg}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
  {{/if}}
</div>